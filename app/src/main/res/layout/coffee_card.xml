<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coffee_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/coffee_card_image_view"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"

            />

        <TextView
            android:id="@+id/coffee_card_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/coffee_card_image_view"
            android:layout_alignStart="@+id/coffee_card_image_view"
            android:layout_alignLeft="@+id/coffee_card_image_view"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />
    </RelativeLayout>


</android.support.v7.widget.CardView>